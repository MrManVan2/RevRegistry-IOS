# ===========================================
# REV REGISTRY - ENVIRONMENT VARIABLES
# ===========================================

# Application Configuration
NEXTAUTH_URL=https://revregistry.app
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Database Configuration
DATABASE_URL=your-database-connection-string-here
DIRECT_URL=your-direct-database-connection-string-here

# Authentication Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Cloudinary Configuration (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for notifications and auth)
EMAIL_SERVER_HOST=your-email-server-host
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email-username
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@revregistry.app

# SMTP Configuration (for Rev Registry notifications)
SMTP_HOST=mail.smtp2go.com
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@revregistry.app

# ===========================================
# SEO & SEARCH ENGINE OPTIMIZATION
# ===========================================

# Search Engine Verification Codes
GOOGLE_SITE_VERIFICATION=your-google-search-console-verification-code
BING_SITE_VERIFICATION=your-bing-webmaster-verification-code
YANDEX_SITE_VERIFICATION=your-yandex-webmaster-verification-code
YAHOO_SITE_VERIFICATION=your-yahoo-site-explorer-verification-code

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
HOTJAR_ID=your-hotjar-tracking-id

# Social Media Integration
TWITTER_USERNAME=revregistry
FACEBOOK_APP_ID=your-facebook-app-id
LINKEDIN_COMPANY_ID=your-linkedin-company-id

# ===========================================
# PERFORMANCE & MONITORING
# ===========================================

# Performance Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Speed & Performance
ENABLE_BUNDLE_ANALYZER=false
ENABLE_EXPERIMENTAL_FEATURES=true

# CDN & Asset Optimization
CDN_URL=https://cdn.revregistry.app
IMAGE_OPTIMIZATION_DOMAINS=res.cloudinary.com,images.unsplash.com

# ===========================================
# API INTEGRATIONS
# ===========================================

# Third-party APIs for enhanced functionality
MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key
FUEL_PRICE_API_KEY=your-fuel-price-api-key

# Business Services
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================

# Development Mode
NODE_ENV=production
DEBUG_MODE=false
ENABLE_LOGGING=true

# Feature Flags
ENABLE_NEW_FEATURES=false
ENABLE_BETA_FEATURES=false
MAINTENANCE_MODE=false

# ===========================================
# SECURITY & COMPLIANCE
# ===========================================

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
CORS_ORIGIN=https://revregistry.app

# Data Protection
ENABLE_GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=2555

# ===========================================
# LOCALIZATION & INTERNATIONALIZATION
# ===========================================

# Default Language & Region
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE
DEFAULT_TIMEZONE=America/New_York
DEFAULT_CURRENCY=USD

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================

# Company Information
COMPANY_NAME=Rev Registry
COMPANY_EMAIL=hello@revregistry.app
SUPPORT_EMAIL=support@revregistry.app
COMPANY_PHONE=+1-800-REV-REGISTRY
COMPANY_ADDRESS=123 Tech Street, Silicon Valley, CA 94301

# Terms & Legal
PRIVACY_POLICY_URL=https://revregistry.app/privacy
TERMS_OF_SERVICE_URL=https://revregistry.app/terms
COOKIE_POLICY_URL=https://revregistry.app/cookies 